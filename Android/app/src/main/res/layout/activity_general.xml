<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/menuFrame"
            android:layout_weight=".85"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"/>

    <RelativeLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorBar2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/timelineBlock"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/timelineImage"
                android:layout_gravity="center_horizontal"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/timeline"
                android:tint="@color/colorBack"/>

            <TextView
                android:id="@+id/timelineText"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="Timeline"
                android:textColor="@color/colorBack"/>

        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/timelineBlock"
            android:layout_marginLeft="45dp"
            android:id="@+id/projectBlock"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/projectImage"
                android:layout_gravity="center_horizontal"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/projects"
                android:tint="@color/colorDisable"/>

            <TextView
                android:id="@+id/projectText"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="Projects"
                android:textColor="@color/colorDisable"/>

        </LinearLayout>

        <LinearLayout
            android:layout_toLeftOf="@+id/attachmentBlock"
            android:layout_marginRight="35dp"
            android:id="@+id/groupBlock"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/groupImage"
                android:layout_gravity="center_horizontal"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/men"
                android:tint="@color/colorDisable"/>

            <TextView
                android:id="@+id/groupText"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="Groups"
                android:textColor="@color/colorDisable"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/attachmentBlock"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/attachmentImage"
                android:layout_gravity="center_horizontal"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/attachments"
                android:tint="@color/colorDisable"/>

            <TextView
                android:id="@+id/attachmentText"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="Attachments"
                android:textColor="@color/colorDisable"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>